{
  "name": "server",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "server/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "defaultConfiguration": "production",
      "dependsOn": ["apidocs"],
      "options": {
        "outputPath": "dist/server",
        "main": "server/src/main.ts",
        "tsConfig": "server/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "server/src/assets",
            "output": "/assets"
          }
        ],
        "transformers": [
          {
            "name": "typescript-transform-paths/nx-transformer"
          }
        ]
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "port": 9200,
        "buildTarget": "server:build:production"
      },
      "configurations": {
        "development": {
          "buildTarget": "server:build:development"
        },
        "test": {
          "buildTarget": "server:build:production"
        },
        "production": {
          "buildTarget": "server:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "apidocs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx swagger-jsdoc -d server/swaggerDefinition.js -o server/src/assets/openapi.yml  \"server/src/handlers/**/*.ts\" server/src/assets/schema/*.yml"
      }
    }
  }
}
