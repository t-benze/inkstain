{
  "manifest_version": 3,
  "name": "Inkstain Chrome Extension",
  "description": "Extension that connects to InkStain and allows users to save content to the InkStain app",
  "version": "1.0",
  "icons": {
    "16": "assets/images/logo-16.png",
    "32": "assets/images/logo-32.png",
    "48": "assets/images/logo-48.png",
    "128": "assets/images/logo-128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "service-worker/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["runtime.js", "scripts/content.js"]
    }
  ],
  "host_permissions": ["https://*/*", "http://*/*"],
  "permissions": ["storage"]
}
